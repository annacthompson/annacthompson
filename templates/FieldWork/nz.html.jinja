{% extends "_base.html.jinja" %} {% block more_scripts %}
<style>
  #map {
    height: 600px;
    width: 98.5%;
    margin: 0;
    padding: 0;
  }
</style>
<!--map-->
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
/>
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"></script>
{% endblock %} {% block backgroundimg %}'/photos/kaikoura.jpg'{%endblock%}
{%block content %}
<div class="whitebox">
  <h1>New Zealand Field School, 2016</h1>
  <a
    href="https://apps.carleton.edu/curricular/ocs/nz/archive/2016/"
    target="_blank"
    >Carleton College Geology in New Zealand Off Campus Study Program</a
  ><br />
  <h2>South Island Mapping Projects</h2>
  <div id="map"></div>
  <img src="/photos/FieldWork/kaikoura.jpg" style="width: 49%" />
  <img src="/photos/FieldWork/kaikoura3.jpg" style="width: 49%" /><br />
  <img src="/photos/FieldWork/kaikoura2.jpg" style="width: 49%" />
  <img src="/photos/FieldWork/flockhill2.jpg" style="width: 43.5%" /><br />
  <img src="/photos/FieldWork/flockhill5.jpg" style="width: 49%" />
  <img src="/photos/FieldWork/flockhill.jpg" style="width: 49%" /> <br />
  <img src="/photos/FieldWork/flockhill3.jpg" style="width: 49%" />
  <img src="/photos/FieldWork/flockhill4.jpg" style="width: 49%" />
</div>
<script>
  //Base Layers
  var Esri_WorldImagery = L.tileLayer(
    "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
    {
      attribution:
        "Tiles &copy; Esri &mdash; Source: Esri, i-cubed, USDA, USGS, AEX, GeoEye, Getmapping, Aerogrid, IGN, IGP, UPR-EGP, and the GIS User Community",
    }
  );
  //the map
  var map = L.map("map", {
    center: new L.LatLng(-42.8, 172.0),
    zoom: 7,
    layers: [Esri_WorldImagery],
  });

  L.marker([-43.214528204615185, 171.75124168395996], {
    title: "Flock Hill mapping area",
    opacity: 1,
  })
    .addTo(map)
    .bindTooltip("Flock Hill mapping area");

  L.rectangle(
    [
      [-43.21997, 171.74141],
      [-43.2094, 171.762],
    ],
    {
      color: "blue", //the outline color
      fillColor: "none",
      weight: 1,
    }
  ).addTo(map);

  L.marker([-42.428, 173.71], {
    title: "Kaikoura Peninsula mapping area",
    opacity: 1,
  })
    .addTo(map)
    .bindTooltip("Kaikoura Peninsula mapping area");

  L.rectangle(
    [
      [-42.43695, 173.6876],
      [-42.41731, 173.72558],
    ],
    {
      color: "blue", //the outline color
      fillColor: "none",
      weight: 1,
    }
  ).addTo(map);
</script>
{% endblock %}
